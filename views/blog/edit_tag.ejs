<%- include ./../header%>
<div class="body">
    <%- include ./../nav%>
    <br>
    <div class="container">
        <div id="post" class="col-md-10 col-md-offset-1">
            <form action="/do_save_tag" method="post">
                <div class="form-group">
                    <label for="title">Tag:</label>
                    <input type="hidden" name="_csrf" value="<%= csrf%>">
                    <input type="hidden" name="tid" value="<%=tag.tid%>">

                    <input class="form-control" name="name" type="text" value="<%=tag.name%>">
                </div>
                <div class="form-group">
                    <label class="radio-inline">
                        <input id="open" type="radio" name="status" value="1"> 开启
                    </label>
                    <label class="radio-inline">
                        <input id="close" type="radio" name="status" value="0"> 关闭
                    </label>

                </div>
                <div class="form-group">
                    <input class="btn btn-success form-control" type="submit" value="提交">
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    var st = '<%=tag.st%>';

    $(function() {
        if(+st === 1){
            $('#open').attr('checked','checked');
        }else{
            $('#close').attr('checked','checked');
        }
    });
</script>
<%- include ./../bottom%>